html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="assets/css/library.css")
        title Library
    body
        section#story-container
            .button-container
                a(href="/profile")
                    button.nav-btn Profile
                a(href="/instructions")
                    button.nav-btn Instructions
                a(href="/logout")
                    button.nav-btn Log Out
            .triangle-left
            .triangle-right
                
            each val in storydata
                    .story.initial-story
                        img(src="assets/" + val.story_img)
                        .title
                            h1.title-text= val.name
                        if val.status
                            a.go-link(src='/story/id/' + val.id)
                                button.go-btn.display-go Go!
                        else 
                            a.go-link
                                button.go-btn Go!
                            .lock-container
                                img.lock(src="assets/images/library/lock.png")
        script(src="assets/js/library.js")
